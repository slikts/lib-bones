{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "sync-glob": "^1.4.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "sync": "sync-glob 'src/**/*' '!src/**/*.ts' packages",
    "sync:watch": "sync-glob -w 'src/**/*' '!src/**/*.ts' packages",
    "prebootstrap": "npm run sync",
    "bootstrap": "lerna bootstrap --hoist",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "jest",
    "clean": "git clean -d -X -f packages",
    "prebuild": "npm run clean && npm run sync",
    "build": "tsc -b",
    "build:watch-ts": "tsc -w",
    "build:watch": "run-p build:watch-ts sync:watch"
  }
}
